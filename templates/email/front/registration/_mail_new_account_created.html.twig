{% extends '@email/default/notification/body.html.twig' %}
{% block lead %}
    <p class="lead">
        {{ email.subject }}
    </p>
{% endblock %}

{% block content %}
    Le nouveau compte a été créé : <strong>{{ user.username }}</strong>
    <br/><br/>
    Nom: {{ user.nom }}<br/>
    Prénom: {{ user.prenom }}<br/>
    Téléphone: {{ user.telephone }}<br/>
    <br/><br/>
    Allez dans la gestion des utilisateurs<br/><br/>
    <ul class="list-group">
        <li class="list-group-item">Donnez le rôle "parent"</li>
        <li class="list-group-item"><strong>Ajoutez une nouvelle fiche parent.</strong></li>
    </ul>

{% endblock %}

{% block action %}
    <spacer size="16"></spacer>
    <button href="{{ absolute_url(path('mercredi_admin_user_show', {'id': user.id})) }}">Gestion de l'utilisateur
    </button>
{% endblock %}

{% block footer_content %}
    {% include '@AcMarcheMercrediAdmin/organisation/_signature.html.twig' %}
{% endblock %}
