{% extends '@AcMarcheBottin/layout.html.twig' %}

{% block body -%}

    <div class="card bg-light mb-3">
        <div class="card-header">
            <h3>{{ utilisateur }}</h3>
        </div>
        <div class="card-body">

            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="row">

                <div class="col-6">
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.username) }}
                </div>
            </div>
            {{ form_row(form.roles) }}
            <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
                Sauvegarder
            </button>
            {{ form_end(form) }}

            <br />
            <a href="{{ path('bottin_utilisateur_show',{'id':utilisateur.id}) }}">
                <span class="fas fa-list"></span> Annuler
            </a>
        </div>
    </div>

{% endblock %}


