{% extends '@AcMarcheBottin/layout.html.twig' %}

{% block body %}

    <div class="card bg-light mb-3">
        <div class="card-header">
            <h3>Nouvel utilisateur</h3>
        </div>
        <div class="card-body">

            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="row">

                <div class="col-6">
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.username) }}
                </div>

                <div class="col-6">
                    {{ form_row(form.plainPassword.first) }}
                </div>

                <div class="col-6">
                    {{ form_row(form.plainPassword.second) }}
                </div>


            </div>
            <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
                Sauvegarder
            </button>
            {{ form_end(form) }}


            <a href="{{ path('mercredi_utilisateur') }}">
                <span class="fas fa-list"></span> Annuler
            </a>
        </div>
    </div>
{% endblock %}
