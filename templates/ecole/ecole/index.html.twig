{% extends '@AcMarcheMercrediEcole/layout.html.twig' %}

{% block body %}
    <h3>Liste de vos écoles</h3>
    <hr>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Localité</th>
            <th>Téléphone</th>
            {% if mercredi_accueil >1 %}
                <th>Inscrire</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for ecole in ecoles %}
            <tr>
                <td>
                    <a href="{{ path('mercredi_ecole_ecole_show', { 'id': ecole.id }) }}">
                        {{ ecole.nom }}
                    </a>
                </td>
                <td>{{ ecole.localite }}</td>
                <td>{{ ecole.telephone }}</td>
                {% if mercredi_accueil > 1 %}
                    <td>
                        {% include '@AcMarcheMercredi/ecole/ecole/_btn_inscriptions.html.twig' %}
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
