{% extends '@AcMarcheMercredi/layout.html.twig' %}

{% block body %}
    <h3>Liste des ecoles</h3>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Né le</th>
        </tr>
        </thead>
        <tbody>
        {% for ecole in ecoles %}
            <tr>
                <td>
                    <a href="{{ path('mercredi_ecole_show', { 'id': ecole.id }) }}">
                        {{ ecole.nom }}
                    </a>
                </td>
                <td>{{ ecole.prenom }}</td>
                <td>{{ ecole.birthday ? ecole.birthday|format_datetime('short', 'none') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
