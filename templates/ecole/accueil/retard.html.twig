{% extends '@AcMarcheMercrediEcole/layout.html.twig' %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header">
            <h3>
                Retard pour <a href="{{ path('mercredi_ecole_enfant_show', {'uuid': enfant.uuid}) }}">
                    {{ enfant }}</a>
            </h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="row">
                <div class="col-6">
                    {{ form_row(form.date_retard) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.heure_retard) }}
                </div>
            </div>
            <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
                Sauvegarder
            </button>
            {{ form_end(form) }}
        </div>
        <div class="card-footer">
            <a href="{{ path('mercredi_ecole_enfant_show',{'uuid': enfant.uuid}) }}" class="mt-4">
                <i class="fas fa-long-arrow-alt-left"></i> Annuler
            </a>
        </div>
    </div>

{% endblock %}
