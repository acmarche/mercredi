<table class="table table-bordered">
    <tr>
        <th>Nom</th>
        <th>Ecole</th>
        {% if mercredi_accueil > 1 %}
            <th>Inscrit accueil ?</th>
            <th>Modifier</th>
        {% endif %}
    </tr>
    {% for enfant in enfants %}
        <tr>
            <td>
                <a href="{{ path('mercredi_ecole_enfant_show', {'uuid': enfant.uuid}) }}">
                    {{ enfant }}
                </a>
            </td>
            <td>{{ enfant.ecole }}</td>
            {% if mercredi_accueil > 1 %}
                <td>{{ enfant.isAccueilEcole ? 'Oui' : 'Non' }}</td>
                <td>
                    <a class="btn btn-warning btn-sm" role="button"
                       href="{{ path('mercredi_ecole_enfant_edit', {'uuid': enfant.uuid}) }}">Modifier</a>
                </td>
            {% endif %}
        </tr>
    {% else %}
        <tr>
            <td colspan="4">Aucun enfant trouv√©</td>
        </tr>
    {% endfor %}
</table>
