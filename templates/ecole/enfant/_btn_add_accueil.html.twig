{% if relations | length == 0 %}

        <button disabled="disabled" type="button" role="button" title="Aucun tuteur"
                class="btn btn-primary"><i
                    class="fas fa-plus"></i> Ajouter un accueil, Aucun tuteur !
        </button>

{% elseif relations | length == 1 %}
    {% set tuteur = relations|first.tuteur %}

        <a href="{{ path('mercredi_ecole_accueil_new', { 'enfant': enfant.id, 'tuteur': tuteur.id }) }}" role="button"
           class="btn btn-primary"><i
                    class="fas fa-plus"></i> Ajouter un accueil</a>

{% else %}

    <div class="dropdown mb-2 mr-2">
        <a class="btn btn-primary dropdown-toggle"
           href="#"
           role="button" id="dropdownMenuLink"
           data-bs-toggle="dropdown"
           aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-plus"></i> Ajouter un accueil
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            {% for relation in relations %}
                {% set tuteur = relation.tuteur %}
                <a class="dropdown-item"
                   href="{{ path('mercredi_ecole_accueil_new', { 'enfant': enfant.id, 'tuteur': tuteur.id }) }}">
                    Sous la garde de <i>{{ tuteur }}</i></a>
            {% endfor %}
        </div>
    </div>
{% endif %}
