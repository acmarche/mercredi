<table class="table table-bordered">
    <tr>
        <th>Nom</th>
        <th>Sa fiche santé</th>
        <th>Attestation fiscale</th>
    </tr>
    {% for enfant in enfants %}
        <tr>
            <td>
                <a href="{{ path('mercredi_parent_enfant_show', {'uuid': enfant.uuid}) }}">
                    {{ enfant }}
                </a>
            </td>
            <td>
                {% if enfant.isFicheSanteIsComplete == false %}
                    <i class="fas fa-exclamation-triangle"
                       title="Données non complètes"></i>
                    <a href="{{ path('mercredi_parent_enfant_edit', {'uuid': enfant.uuid}) }}"
                       style="margin-left: 0.9em;">
                        <i class="fas fa-edit" title="Editer"></i>
                    </a>
                {% else %}
                    <i class="fas fa-check" title="OK"></i>
                {% endif %}
            </td>
            <td>
                <a href="{{ path('mercredi_parent_attestation', {'annee': year, 'uuid': enfant.uuid}) }}">
                    <i class="far fa-file-pdf"></i> Télécharger {{ year }}
                </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td>Aucun enfant trouvé</td>
        </tr>
    {% endfor %}
</table>
