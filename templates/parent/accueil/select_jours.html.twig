{% extends '@AcMarcheMercrediParent/layout.html.twig' %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header">
            <h3>Nouvel accueil pour {{ enfant }}</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    {{ form_row(form.date_jour) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.matin_soir) }}
                </div>
                <div class="col-4">
                    {{ form_row(form.remarque) }}
                </div>
            </div>
            <button class="btn btn-primary mr-1 mb-2" type="submit">
                <i class="far fa-save" aria-hidden="true"></i>
                Sauvegarder
            </button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
