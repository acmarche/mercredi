{% extends '@AcMarcheMercrediParent/layout.html.twig' %}

{% block body -%}

    <div class="card mb-3">
        <div class="card-header">
            <h3>
                Détails de la facture {{ facture.id }}
            </h3>
        </div>
        <div class="card-body">

            <a href="{{ path('mercredi_commun_export_facture_pdf', {'uuid': facture.uuid}) }}"
               class="btn btn-primary mb-3"
               role='button'> <i class="fas fa-file-pdf"></i> Exporter en pdf</a>
            <a href="{{ path('mercredi_parent_facture_index') }}" class="btn btn-primary mb-3"
               role='button'> <i class="fas fa-list"></i> Retour à la liste</a>

            {{ content|raw }}

        </div>
        <div class="card-footer text-muted mt-3">
            Crée le {{ facture.createdAt | format_date('full') }} par {{ facture.userAdd }}. Mis à jour
            le {{ facture.updatedAt | format_date('full') }}
        </div>
    </div>

{% endblock %}
