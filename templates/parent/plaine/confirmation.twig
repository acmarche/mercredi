{% extends '@AcMarcheMercrediParent/layout.html.twig' %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header">
            <h3>Paiement des inscriptions</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <strong>La r√©ception du paiment de la facture fera preuve de confirmation des inscriptions !</strong>
            </div>

            <h5 class="text-success">
                Vous avez inscrit
                {% for enfant in enfantsInscrits %}
                    {{ enfant }},
                {% endfor %}
            </h5><br>
            .<br>

            {% if enfantsInscrits|length > 0 %}
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
                    Obtenir ma facture
                </button>
                {% if enfants|length > enfantsInscrits|length %}
                    ou  <a class="btn btn-primary mr-1 mb-2" href="{{ path('mercredi_parent_plaine_select_enfant') }}">
                    <i class="fas fa-arrow-right" aria-hidden="true"></i>
                    Inscrire d'autres enfants
                </a>
                {% endif %}
                {{ form_end(form) }}
            {% endif %}
        </div>
    </div>

{% endblock %}
