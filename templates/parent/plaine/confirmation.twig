{% extends '@AcMarcheMercrediParent/layout.html.twig' %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header">
            <h3>Paiement des inscriptions</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <strong>La r√©ception du paiment de la facture fera preuve de confirmation des inscriptions !</strong>
            </div>

            <h5 class="text-success">Enfant(s) inscrit(s)</h5>
            <ul class="list-group">
                {% for enfant in enfantsInscrits %}
                    <li class="list-group-item">{{ enfant }}</li>
                {% endfor %}
            </ul>
            <br>
            <br>
            {% if enfantsInscrits|length > 0 %}
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
                Obtenir ma facture
            </button>
            {{ form_end(form) }}
            {% endif %}<br>
            <div class="alert alert-danger">
                Assurez vous d'inscrire tous vos enfants avant de recevoir votre facture
            </div>
        </div>
        <div class="card-footer">
            <i class="fas fa-arrow-left"></i> <a href="{{ path('mercredi_parent_plaine_show', {'id': plaine.id}) }}">Annuler</a>
        </div>
    </div>

{% endblock %}
