{% extends '@AcMarcheMercrediParent/layout.html.twig' %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header">
            <h3>Confirmation des inscriptions</h3>
        </div>
        <div class="card-body">
            <h5 class="text-success">Vous avez inscrit {{ enfants|length }} enfant(s)</h5><br>
            Quand vous aurez confirmer les inscriptions :
            <ul class="list-group">
                <li class="list-group-item">Vous ne pourrez plus inscrire d'autres enfants</li>
                <li class="list-group-item">Une facture sera générée</li>
            </ul>
            .<br>
            <div class="alert alert-warning" role="alert">
                <strong>La réception du paiment de la facture fera preuve de confirmation des inscriptions !</strong>
            </div>

            {% if enfants|length > 0 %}
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
                    Je confirme les inscriptions
                </button>
                {{ form_end(form) }}
            {% endif %}
        </div>
    </div>

{% endblock %}
