{% extends '@AcMarcheMercrediParent/layout.html.twig' %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header">
            <h3>Sélectionnez des jours d'accueil</h3>
        </div>
        <div class="card-body">

            <div class="alert alert-info">
                Les inscriptions pour les mercredis récréatifs se font {{ presence_nb_days }} jours à l'avance. <br/>
                Les inscriptions pour journées pédagogiques (P) se font {{ pedagogique_nb_days }} jours à l’avance.
            </div>

            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_row(form.jours) }}
            <button class="btn btn-primary mr-1 mb-2" type="submit">
                <i class="far fa-save" aria-hidden="true"></i>
                Sauvegarder
            </button>
            {{ form_end(form) }}

            <p>jours</p>
            {{ dates|length }}
        </div>
    </div>

{% endblock %}
