{% extends '@AcMarcheMercrediParent/layout.html.twig' %}
{% block stylesheets %}
    <style>
        #accompagnateurs-list li * {
            display: inline-block;
            margin: 0 10px;
        }

        #accompagnateurs-list li input {
            width: 50%;
        }
    </style>
{% endblock %}
{% block body %}

    <div class="card mb-3">
        <div class="card-header">
            <h3>Fiche sant√© de {{ enfant }} | Etape 2/3</h3>
        </div>
        <div class="card-body">

            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="row">
                <div class="col-6">
                    {{ form_row(form.medecin_nom) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.medecin_telephone) }}
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    {{ form_row(form.personne_urgence) }}
                </div>
                <div class="col-12">
                    {{ form_label(form.accompagnateurs, null, {'label_attr': {'class': 'required'}}) }}
                    {{ form_help(form.accompagnateurs) }}
                    <ul class="list-group" id="accompagnateurs-list"
                        data-prototype="{{ form_widget(form.accompagnateurs.vars.prototype)|e }}">
                        {% for accompagnateurField in form.accompagnateurs %}
                            <li class="list-group-item">
                                {{ form_errors(accompagnateurField) }}
                                {{ form_widget(accompagnateurField) }}
                            </li>
                        {% endfor %}
                    </ul>
                    <div class="offset-md-8">
                        <a href="#" id="add-another-accompagnateur" class="btn btn-success btn-xs">
                            <i class="fas fa-plus"></i> Ajouter une personne
                        </a>
                    </div>
                </div>
            </div>

            {{ form_row(form.remarque) }}

            <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
                Sauvegarder
            </button>
            {{ form_end(form) }}
        </div>
        <div class="card-footer">
            <a class="float-end" href="{{ path('mercredi_parent_enfant_show', {'uuid': enfant.uuid}) }}"><i
                        class="fas fa-arrow-left"></i> Annuler</a>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/bundles/acmarchemercredi/js/accompagnateur.js') }}"></script>
{% endblock %}
