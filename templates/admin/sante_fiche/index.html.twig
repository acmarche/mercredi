{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}
    <h3>Liste des fiches</h3>

    <a class="btn btn-primary m-2" role="button"
       href="{{ path('mercredi_admin_sante_fiche_new') }}"><i class="fas fa-plus"></i> Ajouter une fiche</a>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Intitulé</th>
            <th>Complément d'information</th>
        </tr>
        </thead>
        <tbody>
        {% for sante_fiche in sante_fiches %}
            <tr>
                <td>
                    <a href="{{ path('mercredi_admin_sante_fiche_show', { 'id': sante_fiche.id }) }}">
                        {{ sante_fiche.medecinNom }}
                    </a>
                </td>
                <td></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
