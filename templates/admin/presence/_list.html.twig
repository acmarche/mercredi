<table class="table table-bordered">
    <thead>
    <tr>
        <th style="width: 20%">Date</th>
        <th style="width: 20%">Tuteur</th>
        <th style="width: 10%">Pay√©</th>
        <th style="width: 25%">Plaine</th>
        <th style="width: 25%">Remarque</th>
    </tr>
    </thead>
    <tbody>
    {% for presence in presences %}
        <tr>
            <td>
                <a href="{{ path('mercredi_admin_presence_show', {'id': presence.id}) }}">
                    {{ (presence.jour.dateJour | format_date('full'))|capitalize }}
                    {% if presence.jour.pedagogique %}
                        (P)
                    {% endif %}
                </a>
            </td>
            <td>
                {{ presence.tuteur }}
            </td>
            <td>
                {{ presence.paid ? 'Oui' : 'Non' }}
            </td>
            <td>
                {{ presence.jour.plaine }}
            </td>
            <td class="text-muted">
                {{ presence.remarque }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
