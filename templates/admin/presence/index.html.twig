{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}
    <h3>Liste des presences</h3>

    <a class="btn btn-primary m-2" role="button"
       href="{{ path('mercredi_admin_presence_new') }}"><i class="fas fa-plus"></i> Ajouter une école</a>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Localité</th>
            <th>Téléphone</th>
        </tr>
        </thead>
        <tbody>
        {% for presence in presences %}
            <tr>
                <td>
                    <a href="{{ path('mercredi_admin_presence_show', { 'id': presence.id }) }}">
                        {{ presence.nom }}
                    </a>
                </td>
                <td>{{ presence.localite }}</td>
                <td>{{ presence.telephone }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
