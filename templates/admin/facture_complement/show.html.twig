{% block body %}
    <div class="card">
        <h3 class="card-header">Détails de la réduction {{ factureComplement.dateLe|format_date('full') }}</h3>

        <div class="card-body">
            {% include '@AcMarcheMercrediAdmin/facture_complement/_actions.html.twig' %}
            <table class="table table-bordered">
                <tr>
                    <th>Montant</th>
                    <td>
                        {% if complement.pourcentage %}
                            {{ complement.pourcentage|format_number }} %
                        {% endif %}

                        {% if complement.forfait %}
                            {{ complement.forfait|format_currency('eur') }}
                        {% endif %}
                    </td>
                </tr>
            </table>
        </div>
    </div>
    {% include '@AcMarcheMercrediAdmin/facture_complement/_delete_form.html.twig' %}
{% endblock %}
