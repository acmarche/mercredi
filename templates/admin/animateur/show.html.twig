{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}

    <div class="card mb-3">

        <h3 class="card-header">{{ animateur }}
            <div class="float-right">
                {% include '@AcMarcheMercredi/commun/_sexe.html.twig' with {'entity':animateur} %}
                {% include '@AcMarcheMercredi/commun/_archive.html.twig' with {'entity':animateur} %}
            </div>
        </h3>

        <div class="card-body">

            {% include '@AcMarcheMercrediAdmin/animateur/_actions.html.twig' %}

            <div class="row">
                <div class="col-6">
                    <i class="fas fa-map-marked-alt"></i>
                    {{ animateur.rue }} <br/>
                    {{ animateur.codepostal }} {{ animateur.localite }}

                    <br/>
                </div>
                <div class="col-6">
                </div>
            </div>

            {% if animateur.remarque %}
                <p class="text-muted">
                    {{ animateur.remarque | nl2br }}
                </p>
            {% endif %}

            <br/>
            {% include '@AcMarcheMercrediAdmin/relation/_delete_form.html.twig' %}

        </div>
        <div class="card-footer text-muted mt-3">
            Crée le {{ animateur.createdAt | format_date('full') }} par {{ animateur.userAdd }}. Mis à jour
            le {{ animateur.updatedAt | format_date('full') }}
        </div>
    </div>

    {% include '@AcMarcheMercrediAdmin/animateur/_delete_form.html.twig' %}

{% endblock %}
