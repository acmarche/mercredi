{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}
    <h3>Liste des sante_questions</h3>

    <a class="btn btn-primary m-2" role="button"
       href="{{ path('admin_mercredi_sante_question_new') }}"><i class="fas fa-plus"></i> Ajouter une école</a>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Localité</th>
            <th>Téléphone</th>
        </tr>
        </thead>
        <tbody>
        {% for sante_question in sante_questions %}
            <tr>
                <td>
                    <a href="{{ path('admin_mercredi_sante_question_show', { 'id': sante_question.id }) }}">
                        {{ sante_question.nom }}
                    </a>
                </td>
                <td>{{ sante_question.localite }}</td>
                <td>{{ sante_question.telephone }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
