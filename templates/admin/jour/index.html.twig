{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}
    <h3>Liste des jours de garde</h3>

    <a class="btn btn-primary m-2" role="button"
       href="{{ path('admin_mercredi_jour_new') }}"><i class="fas fa-plus"></i> Ajouter un date</a>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Date</th>
            <th>Prix 1</th>
            <th>Prix 2</th>
            <th>Prix suivant</th>
        </tr>
        </thead>
        <tbody>
        {% for jour in jours %}
            <tr>
                <td>
                    <a href="{{ path('admin_mercredi_jour_show', { 'id': jour.id }) }}">
                        {{ jour.dateJour|format_date('full') }}
                    </a>
                </td>
                <td>{{ jour.prix1 }} €</td>
                <td>{{ jour.prix2 }} €</td>
                <td>{{ jour.prix3 }} €</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
