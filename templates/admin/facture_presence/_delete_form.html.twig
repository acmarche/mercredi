<!-- Modal candidat -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Détacher</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">

                </button>
            </div>
            <div class="modal-body">
                Détacher la présence du  {{ facturePresence.presenceDate | format_date('full') }} ?
            </div>
            <div class="modal-footer">
                <form method="post" action="{{ path('mercredi_admin_facture_presence_delete', {'id': facturePresence.id}) }}">

                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ facturePresence.id) }}">
                    <button type="button" class="btn btn-secondary"
                            data-bs-dismiss="modal">Annuler
                    </button>
                    <button type="submit" class="btn btn-danger">Détacher la présence</button>
                </form>
            </div>
        </div>
    </div>
</div>
