{{ form_start(form) }}
{{ form_errors(form) }}
<div class="row">
    <div class="col-6">
        {{ form_row(form.nom) }}
    </div>
    <div class="col-6">
        {{ form_row(form.prenom) }}
    </div>
    <div class="col-6">
        {{ form_row(form.birthday) }}
    </div>
    <div class="col-6">
        {{ form_row(form.numero_national) }}
    </div>
    <div class="col-6">
        {{ form_row(form.ordre) }}
    </div>
    <div class="col-6">
        {{ form_row(form.sexe) }}
    </div>
    <div class="col-6">
        {{ form_row(form.ecole) }}
    </div>
    <div class="col-6">
        {{ form_row(form.annee_scolaire) }}
    </div>
    <div class="col-6">
        {{ form_row(form.groupe_scolaire) }}
    </div>
    <div class="col-6">
        {{ form_row(form.photoAutorisation) }}
    </div>
    <div class="col-6">
        {{ form_row(form.remarque) }}
    </div>
    <div class="col-6">
        {{ form_row(form.photo) }}
    </div>
</div>
<br/>

<div class="row">
    <div class="col-6">

        <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
            Sauvegarder
        </button>
    </div>
    <div class="col-6">
        {{ form_label(form.accompagnateurs) }}
        <ul class="list-group" id="accompagnateurs-list"
            data-prototype="{{ form_widget(form.accompagnateurs.vars.prototype)|e }}">
            {% for accompagnateurField in form.accompagnateurs %}
                <li class="list-group-item">
                    {{ form_errors(accompagnateurField) }}
                    {{ form_widget(accompagnateurField) }}
                </li>
            {% endfor %}
        </ul>
        <div class="col-offset-8">
            <a href="#" id="add-another-accompagnateur" class="btn btn-success btn-xs">
                <i class="fas fa-plus"></i> Ajouter un accompagnateur
            </a>
        </div>
        <br/>
    </div>
</div>
{{ form_end(form) }}
