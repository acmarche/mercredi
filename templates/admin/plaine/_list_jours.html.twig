<h4 class="text-success">Les jours</h4>
<ul class="list-group list-group-horizontal mb-3">
    {% for row in data %}
        <li class="list-group-item">
            <a href="{{ path('mercredi_admin_plaine_jour_show', {'id': row.jour.id}) }}">
                {{ row.jour.dateJour|format_date('long') }}
            </a>
            <br/>
            <strong>{{ row.enfants|length }} enfants:</strong>
            <div class="text-muted">
                {% for groupe in row.groupes %}
                    {{ groupe.groupe.nom|first|title }} ({{ groupe.enfants|length }}) <br>
                {% endfor %}
            </div>
        </li>
    {% endfor %}
</ul>
