{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}
    <h3>Liste des notes de {{ enfant }}</h3>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Num</th>
            <th>Contenu</th>
        </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>
                    Num: {{ note.id }}
                </td>
                <td>
                    <a href="{{ path('mercredi_admin_note_show', { 'id': note.id }) }}">
                        {{ note.remarque | u.truncate(80) }}  </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
