{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}
    <h3>Liste des notes</h3>

    <a class="btn btn-primary m-2" role="button"
       href="{{ path('mercredi_admin_note_new') }}"><i class="fas fa-plus"></i> Ajouter une note</a>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Num√©ro</th>
            <th>Enfant</th>
            <th>Contenu</th>
        </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>
                    <a href="{{ path('mercredi_admin_note_show', { 'id': note.id }) }}">
                      Num {{ note.id }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('mercredi_admin_note_show', { 'id': note.enfant.id }) }}">
                        {{ note.enfant }}
                    </a>
                </td>
                <td>{{ note.remarque | u.truncate(80) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
