{{ form_start(form) }}
{{ form_errors(form) }}

<ul class="tags list-group mb-2" data-prototype="{{ form_widget(form.jours.vars.prototype)|e('html_attr') }}">
    {% for jour in form.jours %}
        <li class="list-group-item">{{ form_row(jour) }}
            <a href="#" class="btn btn-danger remove-tag float-right"><i class="fas fa-trash"></i></a>
        </li>
    {% endfor %}
</ul>

<button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
    Sauvegarder
</button>
{{ form_end(form) }}
