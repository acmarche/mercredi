{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}
    <div class="card mb-3">
        <div class="card-header">
            <h3>{% if search %} {{ accueils|length }} {% endif %} Accueils des écoles</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="row">
                <div class="col-4">
                    {{ form_row(form.date_jour) }}
                </div>
                <div class="col-4">
                    {{ form_row(form.heure) }}
                </div>
                <div class="col-4">
                    {{ form_row(form.ecole) }}
                </div>
            </div>
            <button class="btn btn-primary mt-2 mr-1 mb-2" type="submit"><i class="fas fa-search"></i>
                Rechercher
            </button>
            {{ form_end(form) }}

            {% if search %}
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Enfant</th>
                        <th>Date</th>
                        <th>Heure</th>
                        <th>Parent</th>
                        <th>Ecole</th>
                        <th>Remarque</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for accueil in accueils %}
                        <tr>
                            <td>
                                <a href="{{ path('mercredi_admin_enfant_show', {'id': accueil.enfant.id}) }}">
                                    {{ accueil.enfant }}
                                </a>
                            </td>
                            <td>{{ accueil.dateJour| format_date('full') }}</td>
                            <td>{{ accueil.heure }}</td>
                            <td>{{ accueil.tuteur }}</td>
                            <td>{{ accueil.enfant ? accueil.enfant.ecole : '' }}</td>
                            <td>{{ accueil.remarque }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Rien trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
        <div class="card-footer">

        </div>
    </div>
{% endblock %}

