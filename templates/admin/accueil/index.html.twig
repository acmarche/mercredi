{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}
    <h3>Liste des accueils</h3>
    <hr>

    {% include '@AcMarcheMercrediAdmin/accueil/_search.html.twig' %}

    {% if search and accueils | length > 0 %}
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Enfant</th>
                <th>Date</th>
            </tr>
            </thead>
            <tbody>
            {% for accueil in accueils %}
                <tr>
                    <td>
                        <a href="{{ path('mercredi_admin_accueil_show', { 'id': accueil.id }) }}">
                            {{ accueil.enfant }}
                        </a>
                    </td>
                    <td>{{ accueil.date_jour|format_date('full') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
