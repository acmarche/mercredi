<div class="align-items-center d-print-none">
    {{ form_start(form, { 'attr': {'class': 'row row-cols-lg-auto g-3 align-items-center hidden-print'}}) }}
    {{ form_errors(form) }}
    <div class="col-auto">
        {{ form_row(form.trimestre, {label_attr: {class: 'sr-only'}, attr:{'class': ' my-1 mr-sm-2'} }) }}
    </div>
    <div class="col-auto">
        {{ form_row(form.ecole, {label_attr: {class: 'sr-only'}, attr:{'class': ' my-1 mr-sm-2'} }) }}
    </div>
    <div class="col-auto">
        {{ form_row(form.year, {label_attr: {class: 'sr-on2ly'}, attr:{'class': ' my-555'} }) }}
    </div>
    <div class="col-12">
        <button class="btn btn-primary mr-1" type="submit"><i class="fas fa-search"></i> Rechercher</button>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
    <br/>
</div>
