{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body -%}

    <div class="card mb-3">
        <div class="card-header">
            <h3>
                Nouvelle facture pour <a href="{{ path('mercredi_admin_tuteur_show', {'id': tuteur.id}) }}">
                    {{ tuteur }}</a>
            </h3>
        </div>
        <div class="card-body">

            {{ form_start(form) }}
            {{ form_errors(form) }}

            {% include '@AcMarcheMercrediAdmin/facture/_presences_non_payes.html.twig' %}
            {% include '@AcMarcheMercrediAdmin/facture/_accueils_non_payes.html.twig' %}

            {{ form_row(form.factureLe) }}
            {{ form_row(form.mois) }}
            {{ form_row(form.remarque) }}

            <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
                Générer la facture
            </button>
            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}
