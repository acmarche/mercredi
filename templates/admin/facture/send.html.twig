{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body -%}

    <div class="card bg-lig2ht mb-3">
        <div class="card-header">
            <h3>Envoie de la facture {{ facture.id }}</h3>
        </div>
        <div class="card-body">

            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="row">
                <div class="col-6">
                    {{ form_row(form.from) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.to) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.sujet) }}
                </div>

            </div>
            {{ form_row(form.texte) }}
            <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-paper-plane"></i>
                Envoyer le message
            </button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
