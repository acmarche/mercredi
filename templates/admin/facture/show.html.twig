{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body -%}

    <div class="card bg-lig2ht mb-3">
        <div class="card-header">
            <h3>Détails de la facture {{ facture.id }}</h3>
        </div>
        <div class="card-body">

            {% include '@AcMarcheMercrediAdmin/facture/_actions.html.twig' %}

            {% include '@AcMarcheMercrediAdmin/facture/_details.html.twig' %}

            <h4 class="text-success">Présences</h4>
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Enfant</th>
                    <th>Date</th>
                    <th>Coût</th>
                </tr>
                </thead>
                {% for presence in facture.facturePresences %}
                    <tr>
                        <td>{{ presence.enfantNom }} {{ presence.enfantPrenom }}</td>
                        <td>{{ presence.presenceDate | format_date('full') }}</td>
                        <td>{{ presence.cout }} €</td>
                    </tr>
                {% endfor %}
            </table>

        </div>
        <div class="card-footer text-muted mt-3">
            Crée le {{ facture.createdAt | format_date('full') }} par {{ facture.userAdd }}. Mis à jour
            le {{ facture.updatedAt | format_date('full') }}
        </div>
    </div>

{% endblock %}
