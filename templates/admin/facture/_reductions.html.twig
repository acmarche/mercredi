{% if factureReductions | length > 0 %}
    <h4 class="text-success">RÃ©ductions</h4>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Raison</th>
            <th>Pourcentage ou montant fixe</th>
        </tr>
        </thead>
        {% for reduction in factureReductions %}
            <tr>
                <td>
                    <a href="{{ path('mercredi_admin_facture_reduction_show', {'id': reduction.id}) }}">
                        {{ reduction.nom }}
                    </a>
                </td>
                <td>
                    {% if reduction.pourcentage %}
                        {{ reduction.pourcentage|format_number }} %
                    {% endif %}

                    {% if reduction.amount %}
                        {{ reduction.amount|format_currency('eur') }}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endif %}
