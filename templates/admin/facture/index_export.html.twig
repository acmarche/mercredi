{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header">
            <h3>Export Xls factures</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                Export récapitulatif des factures par an.
                Reprend le champ "Mois"
            </div>
            <ul class="list-group">
                {% for year in years %}
                    <li class="list-group-item">
                        <a href="{{ path('mercredi_admin_facture_xls', {'year': year}) }}">
                            Année {{ year }}
                        </a>
                    </li>
                {% endfor %}
            </ul>

        </div>
    </div>

{% endblock %}