{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}
    <h3>Liste des tuteurs</h3>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Localité</th>
        </tr>
        </thead>
        <tbody>
        {% for tuteur in tuteurs %}
            <tr>
                <td>
                    <a href="{{ path('mercredi_admin_tuteur_show', { 'id': tuteur.id }) }}">
                        {{ tuteur.nom }}
                    </a>
                </td>
                <td>{{ tuteur.prenom }}</td>
                <td>{{ tuteur.localite }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
