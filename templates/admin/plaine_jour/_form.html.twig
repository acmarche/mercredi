{{ form_start(form) }}
{{ form_errors(form) }}

<div class="row tags mb-2" id="lolo" data-prototype="{{ form_widget(form.jours.vars.prototype)|e('html_attr') }}">
    {% for jour in form.jours %}
        <div class="col-6 remove{{ loop.index }}">
            {{ form_row(jour) }}
        </div>
        <div class="col-4 remove{{ loop.index }}">
            <a href="#" class="btn btn-danger remove-tag"><i class="fas fa-trash"></i></a>
        </div>
    {% endfor %}
</div>

<button class="btn btn-primary" type="submit"><i class="far fa-save" aria-hidden="true"></i>
    Sauvegarder
</button>

{{ form_end(form) }}
