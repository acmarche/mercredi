{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3>Liste des années scolaires</h3>
        </div>
        <div class="card-body">

            <a class="btn btn-primary m-2" role="button"
               href="{{ path('mercredi_admin_annee_scolaire_new') }}"><i class="fas fa-plus"></i> Ajouter une année
                scolaire</a>

            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Groupe scolaire</th>
                    <th>Année suivante</th>
                    <th>Enfants</th>
                    <th>Ordre</th>
                </tr>
                </thead>
                <tbody>
                {% for annee_scolaire in annees %}
                    <tr>
                        <td>
                            <a href="{{ path('mercredi_admin_annee_scolaire_show', { 'id': annee_scolaire.id }) }}">
                                {{ annee_scolaire.nom }}
                            </a>
                        </td>
                        <td>{{ annee_scolaire.groupeScolaire }}</td>
                        <td>{{ annee_scolaire.anneeSuivante }}</td>
                        <td>{{ annee_scolaire.enfants | length }}</td>
                        <td>{{ annee_scolaire.ordre }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn btn-primary m-2" role="button"
               href="{{ path('mercredi_admin_leveling_up') }}"><i class="fas fa-socks"></i>
                Passage d'année scolaire</a>
        </div>
    </div>

{% endblock %}
