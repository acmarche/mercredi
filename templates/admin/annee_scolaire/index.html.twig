{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}
    <h3>Liste des annees scolaires</h3>

    <a class="btn btn-primary m-2" role="button"
       href="{{ path('mercredi_admin_annee_scolaire_new') }}"><i class="fas fa-plus"></i> Ajouter une ann√©e scolaire</a>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Groupe scolaire</th>
        </tr>
        </thead>
        <tbody>
        {% for annee_scolaire in annees %}
            <tr>
                <td>
                    <a href="{{ path('mercredi_admin_annee_scolaire_show', { 'id': annee_scolaire.id }) }}">
                        {{ annee_scolaire.nom }}
                    </a>
                </td>
                <td>
                    {{ annee_scolaire.groupeScolaire }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
