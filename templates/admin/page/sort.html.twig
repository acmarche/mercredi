{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}

    <h3>Ordre d'affichage des pages</h3>

    <a href="{{ path('mercredi_admin_page_index') }}" class="btn btn-primary" role="button"><i
                class="fas fa-list"></i>
        Retour à la liste</a>

    <br/> <br/>
    <div class="alert alert-info">
        Pour changer l'ordre d'appariation des pages, glissez en maintenant la souris sur l'icône <i
                class="fas fa-sort"></i>
    </div>

    <div class="" id="success"></div>

    <ul class="list-group"
        data-controller="sortable"
        data-sortable-animation-value="150">
        {% for page in pages %}
            <li id="{{ page.id }}"
                class="list-group-item"
                data-sortable-update-url="{{ path('mercredi_admin_ajax_page_sort', {'id': page.id }) }}">
                <i class="fas fa-sort me-2"></i>{{ page }}
            </li>
        {% endfor %}
    </ul>

{% endblock %}
