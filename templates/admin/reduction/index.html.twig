{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}
    <h3>Liste des reductions</h3>

    <a class="btn btn-primary m-2" role="button"
       href="{{ path('admin_mercredi_reduction_new') }}"><i class="fas fa-plus"></i> Ajouter une Ã©cole</a>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Pourcentage</th>
        </tr>
        </thead>
        <tbody>
        {% for reduction in reductions %}
            <tr>
                <td>
                    <a href="{{ path('admin_mercredi_reduction_show', { 'id': reduction.id }) }}">
                        {{ reduction.nom }}
                    </a>
                </td>
                <td>{{ reduction.pourcentage }} %</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
