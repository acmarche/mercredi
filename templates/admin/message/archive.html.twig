{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h3>Messages envoy√©s</h3>
        </div>
        <div class="card-body">

            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Sujet</th>
                    <th>Destinataires</th>
                </tr>
                </thead>
                <tbody>
                {% for message in messages %}
                    <tr>
                        <td>
                            <a href="{{ path('mercredi_message_show', {'id': message.id}) }}">
                                {{ message.createdAt | format_date('full') }}
                            </a>
                        </td>
                        <td>{{ message.sujet }}</td>
                        <td>{{ message.destinataires | length }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
