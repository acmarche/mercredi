{% extends '@AcMarcheMercrediAdmin/layout.html.twig' %}

{% block body %}
    <div class="card">
        <h3 class="card-header">Détails de la réduction {{ factureReduction.dateLe|format_date('full') }}</h3>

        <div class="card-body">
            {% include '@AcMarcheMercrediAdmin/facture_reduction/_actions.html.twig' %}
            <table class="table table-bordered">
                <tr>
                    <th>Montant</th>
                    <td>
                        {% if factureReduction.pourcentage %}
                            {{ factureReduction.pourcentage|format_number }} %
                        {% endif %}

                        {% if factureReduction.amount %}
                            {{ factureReduction.amount|format_currency('eur') }}
                        {% endif %}
                    </td>
                </tr>
            </table>
        </div>
    </div>
    {% include '@AcMarcheMercrediAdmin/facture_reduction/_delete_form.html.twig' %}
{% endblock %}

