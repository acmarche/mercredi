            <strong>La fiche enfant</strong> <a
                    href="{{ path('mercredi_admin_enfant_show',{'id': enfant.id}) }}">{{ enfant }}</a> a bien été
            ajoutée
            <br><br>
            {% include '@AcMarcheMercrediAdmin/quick/_account_info.html.twig' %}
        </div>
    </div>
{% endblock %}
