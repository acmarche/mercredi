{% extends '@AcMarcheBottin/layout.html.twig' %}

{% block main_class %}class="container-fluid pt-3"{% endblock %}

{% block body -%}


    <div class="row">
        <div class="offset-2 col-10">
            <div class="page-header">
                <h3>Rechercher une fiche</h3>
            </div>

            {% include '@AcMarcheBottin/search/_fiche.html.twig' %}
        </div>
    </div>

    {% if hits|length > 0 %}

        <div class="row">
            <div class="offset-2 col-10 mt-2">
                {{ include('@AcMarcheBottin/fiche/_suggests.html.twig') }}
                <h4 class="text-success">{{ hits.total.value }} trouvé</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                {{ include('@AcMarcheBottin/fiche/_aggregations.html.twig') }}
            </div>
            <div class="col-10">
                <table class='table table-bordered table-hover'>
                    <thead>
                    <tr>
                        <th>Societe</th>
                        <th>Localité</th>
                        <th>Score</th>
                        <th>Pmr</th>
                        <th>Midi</th>
                        <th>Centre</th>
                        <th>Comment1</th>
                        <th>Score</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for hit in hits.hits %}
                        {% set fiche = hit._source %}
                        <tr>
                            <td>
                                <a href="{{ path('bottin_fiche_show', { 'id': fiche.id }) }}"
                                   title="Détail de la fiche">
                                    {{ fiche.societe }}
                                </a>
                            </td>
                            <td>
                                {{ fiche.localite }}
                            </td>
                            <td>
                                {{ hit._score }}
                            </td>
                            <td>
                                {{ fiche.pmr }}
                            </td>
                            <td>
                                {{ fiche.midi }}
                            </td>
                            <td>
                                {{ fiche.centreville }}
                            </td>
                            <td>
                                {{ fiche.comment1|u.truncate(50,'...') }}
                            </td>
                            <td>
                                {{ hit._score }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    {% endif %}

{% endblock %}
