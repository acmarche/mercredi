{% extends '@AcMarcheMercredi/layout.html.twig' %}

{% block body -%}

    <div class="card bg-lig2ht mb-3">
        <div class="card-header">
            <h3>Sélectionnez sur quel profil vous souhaitez travailler</h3>
        </div>
        <div class="card-body">
            <ul class="list-group">
                {% if is_granted('ROLE_MERCREDI_ADMIN') %}
                    <li class="list-group-item">
                        <a href="{{ path('mercredi_admin_home') }}">Accès en tant que administrateur</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_MERCREDI_ANIMATEUR') %}
                    <li class="list-group-item">
                        <a href="">Accès en tant que animateur</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_MERCREDI_PARENT') %}
                    <li class="list-group-item">
                        <a href="{{ path('mercredi_parent_home') }}">Accès en tant que parent</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_MERCREDI_ECOLE') %}
                    <li class="list-group-item">
                        <a href="">Accès en tant que école</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>

{% endblock %}
