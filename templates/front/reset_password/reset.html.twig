{% extends '@AcMarcheMercredi/front/layout.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="card mb-3">
        <div class="card-header">
            <h3>Changez votre mot de passe</h3>
        </div>

        <div class="card-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_row(form.plainPassword) }}

            <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
                Envoyer
            </button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
