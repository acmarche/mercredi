<!doctype html>
<html lang="fr" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Mercredi{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/acmarchemercredi/favicon.ico') }}"/>
    <meta name="description" content="">
    <meta name="author" content="Cst">

    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_script_tags('app') }}

    {% block stylesheets %}{% endblock %}

    <link href="{{ asset('bundles/acmarchemercredi/css/print.css') }}" rel="stylesheet" media="print">
    <meta name="theme-color" content="#563d7c">
</head>
<body class="d-flex flex-column h-100 {% block body_class %}{% endblock %}">
<!-- Top nav bar -->
<nav class="navbar navbar-expand-md navbar-light bg-light fixed-top border-bottom shadow-sm d-print-none">

    <i class="fas fa-frog icon-rose"></i>
    {% block brand %}
        <a class="navbar-brand" href="{{ path('mercredi_front_home') }}">Mercredi</a>
    {% endblock %}

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExampleDefault"
            aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto ml-auto">
            {% block menu_top %}

            {% endblock %}
        </ul>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {% include '@AcMarcheMercredi/_menu_user.html.twig' %}
        {% else %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('app_login') }}" class="nav-link" title="Connexion">
                        <i class="fas fa-sign-in-alt"></i> Me connecter</a>
                </li>
            </ul>
        {% endif %}
    </div>
</nav>
<!-- Begin page content -->
<main role="main" class="flex-shrink-0">
    <div class="{% block container_class %}container{% endblock %} pt-3">

        {% include '@AcMarcheMercredi/_flash_messages.html.twig' %}

        {% block notifications %}

        {% endblock %}

        {% block body %}

        {% endblock %}

    </div>
</main>

<footer class="footer mt-auto py-3">
    <div class="container">
        {% block footer %}
            <span class="text-muted">
                {{ render(path('mercredi_organisation_show')) }}
            </span>
        {% endblock %}
    </div>
</footer>
{% block javascripts %}{% endblock %}

</body>
</html>
