<!doctype html>
<html lang="fr" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Mercredi{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/acmarchemercredi/favicon.ico') }}"/>
    {% block stylesheets %}{% endblock %}
    <meta name="description" content="">
    <meta name="author" content="Cst">
    <!-- Bootstrap core CSS -->
    <link href="{{ asset('bundles/acmarchemercredi/css/app.css') }}" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="{{ asset('bundles/acmarchemercredi/css/print.css') }}" rel="stylesheet" media="print">
    <meta name="theme-color" content="#563d7c">
</head>
<body class="d-flex flex-column h-100 {% block body_class %}{% endblock %}">
<!-- Top nav bar -->
<nav class="navbar navbar-expand-md navbar-light bg-light fixed-top border-bottom shadow-sm">

    <i class="fas fa-frog icon-rose"></i>
    {% block brand %}
        <a class="navbar-brand" href="{{ path('mercredi_front_home') }}">Mercredi</a>
    {% endblock %}

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
            aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto ml-auto">
            {% block menu_top %}

            {% endblock %}
        </ul>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {% include '@AcMarcheMercredi/_menu_user.html.twig' %}
        {% else %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('app_login') }}" class="nav-link" title="Connexion">
                        <i class="fas fa-sign-in-alt"></i> Me connecter</a>
                </li>
            </ul>
        {% endif %}
    </div>
</nav>
<!-- Begin page content -->
<main role="main" class="flex-shrink-0">
    <div class="container pt-3">

        {% include '@AcMarcheMercredi/_flash_messages.html.twig' %}

        {% block notifications %}

        {% endblock %}

        {% block body %}

        {% endblock %}

    </div>
</main>

<footer class="footer mt-auto py-3">
    <div class="container">
        {% block footer %}
            <span class="text-muted">
                {{ render(path('mercredi_organisation_show')) }}
            </span>
        {% endblock %}
    </div>
</footer>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
        crossorigin="anonymous"></script>
<script src="{{ asset('bundles/acmarchemercredi/js/typeahead/typeahead.bundle.js') }} " type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>

{% block javascripts %}{% endblock %}

</body>
</html>
